<link rel="stylesheet" href="/stylesheets/style.css">
<link rel="stylesheet" href="/stylesheets/index.css">

<div class="wrap col-md-12">

  <div class="products col-md-8">
    <div class="row">

      {{#each products}}
      <div class="card col-md-2">
        <a href="/products/{{this.id}}">
          <img src="{{this.image}}" class="card-img-top" alt="無法顯示圖片，請聯絡管理員">
          <div class="card-title">
            {{this.name}}
          </div>
        </a>
        <div class="description">
          <h5>
            <small>Description:</small>
          </h5>
          <p class="card-text">
            {{this.description}}
          </p>
        </div>
        <div class="price">
          <form action="/carts/{{this.id}}" method="POST">
            <button type="submit"><i class="fas fa-cart-plus"></i></button>
          </form>
          $ {{this.price}}
        </div>
      </div>
      {{/each}}

    </div>

    <nav aria-label="...">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="/products?page={{prev}}">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each totalPage}}
        {{#ifCond this ../page}}
        <li class="page-item active"><a class="page-link" href="/products?page={{this}}">{{this}}</a></li>
        {{else}}
        <li class="page-item"><a class="page-link" href="/products?page={{this}}">{{this}}</a>
        </li>
        {{/ifCond}}
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="/products?page={{next}}">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>

</div>